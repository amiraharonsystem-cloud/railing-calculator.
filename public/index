<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>מערכת הזנת נתונים</title>
    <style>
        body { font-family: sans-serif; background: #f0f2f5; display: flex; justify-content: center; padding: 50px; }
        .form-card { background: white; padding: 25px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); width: 350px; }
        input { width: 100%; padding: 12px; margin: 10px 0; border: 1px solid #ddd; border-radius: 5px; box-sizing: border-box; }
        button { width: 100%; padding: 12px; background: #1a73e8; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; }
        #status { text-align: center; margin-top: 15px; color: green; }
    </style>
</head>
<body>

<div class="form-card">
    <h2>הזנת נתונים לאקסל</h2>
    <input type="text" id="name" placeholder="שם מלא">
    <input type="email" id="email" placeholder="אימייל">
    <input type="text" id="phone" placeholder="טלפון">
    <input type="text" id="city" placeholder="עיר">
    <button onclick="sendToCloud()">שלח לענן</button>
    <div id="status"></div>
</div>

<script>
    async function sendToCloud() {
        const url = "כאן_תדביק_את_הקישור_שקיבלת_מגוגל"; 
        const data = {
            name: document.getElementById('name').value,
            email: document.getElementById('email').value,
            phone: document.getElementById('phone').value,
            city: document.getElementById('city').value
        };

        document.getElementById('status').innerText = "שולח נתונים...";

        try {
            await fetch(url, {
                method: 'POST',
                mode: 'no-cors', // חשוב מאוד לעבודה מול גוגל
                body: JSON.stringify(data)
            });
            document.getElementById('status').innerText = "הנתונים נשמרו באקסל בהצלחה!";
            document.querySelectorAll('input').forEach(i => i.value = '');
        } catch (e) {
            document.getElementById('status').innerText = "שגיאה בשליחה";
        }
    }
</script>

</body>
</html>
